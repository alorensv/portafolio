---
const skills = [
  { name: 'HTML5', percentage: 90 },
  { name: 'CSS3', percentage: 85 },
  { name: 'JavaScript', percentage: 88 },
  { name: 'React', percentage: 82 },
  { name: 'Node.js', percentage: 80 },
  { name: 'Docker', percentage: 75 },
  { name: 'TypeScript', percentage: 78 },
  { name: 'Python', percentage: 85 },
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
  {skills.map((skill) => (
    <div class="bg-secondary p-4 rounded-lg transform hover:scale-105 transition-transform">
      <h3 class="text-xl font-bold mb-2">{skill.name}</h3>
      <div class="w-full bg-primary rounded-full h-2.5">
        <div
          class="bg-accent h-2.5 rounded-full transition-all duration-1000"
          style={`width: ${skill.percentage}%`}
        />
      </div>
      <span class="text-sm text-gray-400 mt-1">{skill.percentage}%</span>
    </div>
  ))}
</div>
