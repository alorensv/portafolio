---
const skills = [
  { name: 'Laravel', percentage: 95 },
  { name: 'Astro', percentage: 85 },
  { name: 'JavaScript', percentage: 88 },
  { name: 'React', percentage: 82 },
  { name: 'Node.js', percentage: 80 },
  { name: 'Docker', percentage: 75 },
  { name: 'Python', percentage: 85 },
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
  {skills.map((skill) => (
    <div class="group bg-gradient-to-br from-white to-slate-50 p-6 rounded-xl border border-slate-200 shadow-lg shadow-slate-200/20 transform hover:scale-105 hover:shadow-primary/5 hover:border-primary/20 transition-all duration-300">
      <h3 class="text-xl font-bold mb-3 text-primary group-hover:text-primary/80 transition-colors">{skill.name}</h3>
      <div class="w-full bg-slate-200 rounded-full h-3 overflow-hidden">
        <div
          class="bg-gradient-to-r from-primary via-accent to-primary h-3 rounded-full transition-all duration-1000 relative"
          style={`width: ${skill.percentage}%`}
        >
          <div class="absolute inset-0 bg-[linear-gradient(90deg,transparent_0%,rgba(255,255,255,0.3)_50%,transparent_100%)] animate-shine"></div>
        </div>
      </div>
      <span class="text-sm text-primary/60 mt-2 inline-block group-hover:text-primary transition-colors">{skill.percentage}%</span>
    </div>
  ))}
</div>

<style>
  @keyframes shine {
    from {
      transform: translateX(-100%);
    }
    to {
      transform: translateX(100%);
    }
  }

  .animate-shine {
    animation: shine 2s infinite;
  }
</style>
